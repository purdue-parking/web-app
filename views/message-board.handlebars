<div id="table-container">
	<table class="table table-hover">
		<thead>
			<tr>
				<th>Message</th>
				<th><button type="button" class="btn btn-success" id="add-msg">Add a message</button>
					<button type="button" class="btn btn-primary" id="sortHelp">Show Help Needed</button>
					<button type="button" class="btn btn-primary" id="sortVotes">Show Most Helpful</button></th>
			</tr>
		</thead>
		<tbody id="msg-table-body">
			{{#each items}}
				<tr class="message-row" id="{{messageID}}">
					<!--td><input type="text" class="table-input message-field" disabled value={{message}}></input></td-->
					<td class="message-field">{{{message}}}</td>
					<td class="table-help-needed">
						{{#if helpNeeded}}
							<span class="glyphicon glyphicon-question-sign" aria-hidden="true"></span><br>
							{{#if resolved}}
								<input type="checkbox" id="isResolved" checked disabled>    Resolved</input>
							{{else}}
								<input type="checkbox" id="isResolved" disabled>    Resolved</input>
							{{/if}}
						{{/if}}
					</td>
					<td class="message-votes"><div id="voteCount" style="float: left; margin-left: 8px; margin-top: 4px">{{votes}}</div>
					<div class="vote-buttons" style="float: left">
						<button type="button" class="btn btn-info up-btn">
							<span class="glyphicon glyphicon-chevron-up" aria-hidden="true"></span>
						</button>
						<button type="button" class="btn btn-info down-btn">
							<span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span>
						</button>
					</div></td>
				</tr>
			{{/each}}
		</tbody>
	</table>
</div>

<div class="modal fade" id="addMsgModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Add a Message</h4>
      </div>
      <div class="modal-body">
        <textarea rows="4" cols="50" id="messageTextArea"></textarea><br>
        <input type="checkbox" id="isHelpNeeded">  Help Needed</input>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="saveNewMsg">Save</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


<script src="/public/js/message-board.js"></script>